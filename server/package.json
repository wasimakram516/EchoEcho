{
  "name": "echoecho-backend",
  "version": "1.0.0",
  "description": "EchoEcho is a dynamic social media platform designed to foster community and connectivity. Utilizing the MERN stack, it features real-time communication, robust user interactions, and a scalable architecture to handle a growing user base.",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "node_modules/"
    ],
    "watch": [
      "server/"
    ],
    "ext": "js,json",
    "exec": "node server.js"
  },
  "author": "Wasim Akram",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.1",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
